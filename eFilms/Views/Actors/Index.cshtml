<!--Define Model-->
@model IEnumerable<Actor>

<!--Define ViewData-->
@{
    ViewData["Title"] = "List of Actors";
}

<!--HTML code-->

<h1>Welcome to the Actors view</h1>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <!--You can either hard code the column name or get it from the model-->
                    <!--<th>Actor Picture</th>-->
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Actor actor in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@actor.ProfilePictureURL" style="max-width:150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => actor.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => actor.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-primary text-white">
                                <i class="badge-info bi-pencil-square"></i>
                                Edit
                            </a>
                            <a class="btn btn-info text-white">
                                <i class="badge-info bi-eye"></i>
                                Details
                            </a>
                            <a class="btn btn-danger text-white">
                                <i class="badge-info bi-trash"></i>
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>