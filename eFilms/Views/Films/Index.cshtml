<!--Define Model-->
@model IEnumerable<Film>

<!--Define ViewData-->
@{
    ViewData["Title"] = "List of Films";
}

<!--HTML code-->

<h1>Welcome to the Films view</h1>

<div class="row">
    @foreach (Film film in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @film.Name
                                    <a class="text-white float-right">
                                        <i class="bi-eye bi-pencil-square"></i>
                                    </a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@film.FilmCoverURL" width="100%" alt="" />
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@film.Description</p>
                            <p class="card-text"><b>Store: </b>@film.StoreFilms</p>
                            <p class="card-text"><b>Category: </b>@film.FilmCategory</p>                            <p class="card-text">Description Sample</p>
                            <p class="card-text"><b>Release Date: </b>@film.ReleaseDate.ToString("dd/MM/yy")</p>
                            <p class="card-text">
                                <b>Status: </b>
                                @if (DateTime.Now >= film.ReleaseDate)
                                {
                                    <span class="badge bg-success text-white">Available to buy</span>
                                } else
                                {
                                    <span class="badge bg-danger text-white">Not available</span>  
                                }
                            </p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right">
                                    <i class="bi bi-eye-fill">
                                        Show Details
                                    </i>
                                </a>
                                <a class="btn btn-success text-white">
                                    <i class="bi bi-cart-plus">
                                        Add to Cart (@film.Price.ToString("c"))
                                    </i>
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div> 
    }
</div>
