<!--Define Model-->
@model IEnumerable<Store>
<!--Define ViewData-->
@{
    ViewData["Title"] = "List of Stores";
}

<!--HTML code-->

<h1>Welcome to the Stores view</h1>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <!--You can either hard code the column name or get it from the model-->
                    <!--<th>Actor Picture</th>-->
                    <th>@Html.DisplayNameFor(model => model.StoreLogoURL)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Store store in Model)
                {
                <tr>
                    <td class="align-middle">
                        <img class="rounded-circle" src="@store.StoreLogoURL" style="max-width:150px" />
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => store.Name)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => store.Description)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-primary text-white">
                            <i class="badge-info bi-pencil-square"></i>
                            Edit
                        </a>
                        <a class="btn btn-danger text-white">
                            <i class="badge-info bi-trash"></i>
                            Delete
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>